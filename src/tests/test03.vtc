varnishtest "Test nested object to_json"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import json from "${vmod_topbuild}/src/.libs/libvmod_json.so";

	sub vcl_deliver {
		json.integer(".foo.bar", 1337);
		set resp.http.json = json.to_json(".foo");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.json == "{\"bar\": 1337}"
}

client c1 -run
