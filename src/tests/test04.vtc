varnishtest "Test array indexed insertion"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import json from "${vmod_topbuild}/src/.libs/libvmod_json.so";

	sub vcl_deliver {
		json.integer(".foo[0]", 1337);
		set resp.http.json = json.to_json("");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.json == "{\"foo\": [1337]}"
}

client c1 -run
